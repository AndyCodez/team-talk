<div class="max-w-xl mx-auto">
  <h1 class="text-3xl font-bold mb-4"><%= @project.name %></h1>
  <p><%= @project.status %></p>
  <%= form_with(model: @project, url: change_status_path(@project)) do |form| %>
    <%= form.select :status, options_for_select(Project.statuses.keys.map { |s| [s.titleize, s]} )%> 
    <input type="hidden" name="project_id" value="<%= @project.id %>">
    <%= form.submit %> 
  <% end %>
  
  <div class="flex justify-between">
    <%= link_to "Edit Project", edit_project_path(@project), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Delete Project", project_path(@project), data: { confirm: "Are you sure you want to delete this project?", "turbo-method": :delete }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>

<% @comments.each do |comment| %>
    <div class="max-w-xl mx-auto">
        <h1 class="text-3xl font-bold mb-4"><%= comment.text %></h1>
        <h1 class="text-3xl font-bold mb-4"><%= comment.author %></h1>
    </div>
<% end %>

<%= form_with(model: @comment, local: true) do |form| %>
    <div>
        <%= form.label :text %>
        <%= form.text_field :text %>
        <input type="hidden" name="project_id" value="<%= @comment.project_id %>">
        <input type="hidden" name="user_id" value="<%= @comment.user_id %>">

    </div>
    <%= form.submit "Add comment" %>
<% end %>