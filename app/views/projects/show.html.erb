<div class="max-w-xl mx-auto">
  <h1 class="text-3xl font-bold mb-4"><%= @project.name %></h1>

  <div class="flex justify-between">
    <%= link_to "Edit Project", edit_project_path(@project), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Delete Project", project_path(@project), data: { confirm: "Are you sure you want to delete this project?", "turbo-method": :delete }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
