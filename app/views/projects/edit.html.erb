<div class="max-w-xl mx-auto">
  <div class="bg-white rounded-lg shadow-lg p-6">
    <h1 class="text-3xl font-bold mb-4 text-center">Edit <%= @project.name %></h1>
    <p class="text-gray-700 mb-4 text-center"><%= @project.status.titleize %></p>  
    <%= form_with(model: @project, local: true, class: "text-center") do |form| %>
      <div class="mb-4">
        <%= form.label :name, "Project Name", class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500" %>
      </div>

      <%= form.submit "Update Project", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline-blue" %>
    <% end %>
  </div>
</div>
